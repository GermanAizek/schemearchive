---
import * as entities from '../../lib/entities.ts'
import { snakeToKebab } from '../../lib/style-helpers.ts'
import RichText from './RichText.astro'
import NotionBlocks from '../NotionBlocks.astro'
import '../../styles/notion-color.css'

export interface Props {
  block: entities.Block
  level: number
  headings: entities.Block[]
}

const { block, level, headings } = Astro.props

const listTypes = ['1', 'a', 'i']
---

<ol type={listTypes[level % 3]}>
  {
    block.ListItems.filter(
      (b: entities.Block) => b.Type === 'numbered_list_item'
    ).map((b: entities.Block) => (
      <li class={snakeToKebab(b.NumberedListItem.Color)}>
        {b.NumberedListItem.RichTexts.map((richText: entities.RichText) => (
          <RichText richText={richText} />
        ))}
        {b.HasChildren && (
          <NotionBlocks
            blocks={b.NumberedListItem.Children}
            level={level + 1}
            headings={headings}
          />
        )}
      </li>
    ))
  }
</ol>
