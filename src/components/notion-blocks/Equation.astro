---
import katex from 'katex'
import * as entities from '../../lib/entities.ts'

export interface Props {
  block: entities.Block
}

const { block } = Astro.props
---

<div
  class="equation"
  set:html={katex.renderToString(block.Equation.Expression, {
    throwOnError: false,
  })}
/>

<style>
  .equation {
    text-align: center;
  }
</style>
